<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#FF5E3A"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/admin_creation_ue_img_previous"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_centerInParent="true"
            android:layout_marginStart="20sp"
            android:contentDescription="@string/desc_img"
            android:onClick="back"
            android:src="@drawable/previous" />

        <TextView
            android:id="@+id/admin_crea_ue_titre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:gravity="center_horizontal"
            android:text="@string/administrateur_creation_ue_titre_texte"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/admin_crea_ue_btn_save"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerInParent="true"
            android:layout_marginEnd="30dp"
            android:clickable="true"
            android:onClick="creerUE"
            android:text="@string/bout_ok_txt"
            android:textColor="@drawable/button_color_selector"
            android:textSize="18sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/admin_creation_ue_nom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:hint="Nom *"
        android:inputType="text"
        android:singleLine="true" />

    <EditText
        android:id="@+id/admin_creation_ue_nb_option"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="Nombre d&apos;option(s) minimum"
        android:inputType="number"
        android:maxLength="1"
        android:singleLine="true" />

    <EditText
        android:id="@+id/admin_creation_ue_moyenne_mini"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:hint="@string/admin_creation_ue_moyenne_minimale_tv"
        android:inputType="number"
        android:maxLength="1"
        android:singleLine="true" />

    <Spinner
        android:id="@+id/admin_creation_ue_spinner"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:gravity="center"
        android:prompt="@string/crea_ue_decoupage" />

    <TextView
        android:id="@+id/admin_crea_ue_champ_obligatoire"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="5dp"
        android:textColor="#000000"
        android:text="* : Champ obligatoire"
        android:textSize="11sp" />

</LinearLayout>