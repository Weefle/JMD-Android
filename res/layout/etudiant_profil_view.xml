<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#FF5E3A"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/etudiant_profil_titre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:textColor="#FFFFFF"
            android:text="@string/etudiant_profil_titre_txt"
            android:textSize="20sp" />

    </RelativeLayout>
    
    <EditText
        android:id="@+id/etudiant_profil_prenom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:hint="PrÃ©nom"
        android:inputType="text"
        android:singleLine="true" />
    
    <EditText
        android:id="@+id/etudiant_profil_nom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:hint="Nom"
        android:inputType="text"
        android:singleLine="true" />
    
    <EditText
        android:id="@+id/etudiant_profil_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:hint="Email"
        android:inputType="text"
        android:singleLine="true" />
    
    <Button
        android:id="@+id/etudiant_profil_bout_supp_profil"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="20dp"
        android:background="@drawable/button_style"
        android:onClick="supprimerProfil"
        android:padding="10dp"
        android:text="Supprimer le profil"
        android:textColor="@drawable/button_color_selector" />
    
    <Button
        android:id="@+id/etudiant_profil_bout_valider"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="60dp"
        android:background="@drawable/button_style"
        android:padding="10dp"
        android:onClick="sauvegarderProfil"
        android:text="Valider"
        android:textColor="@drawable/button_color_selector" />

</LinearLayout>