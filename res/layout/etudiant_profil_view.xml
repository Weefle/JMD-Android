<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="#FFFFFF"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="60dp"
        android:background="#FF5E3A"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/etudiant_profil_titre"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerInParent="true"
            android:layout_marginLeft="30dp"
            android:text="@string/etudiant_profil_titre_txt"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

        <ImageButton
            android:id="@+id/etudiant_profil_bout_supp_profil"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="85dp"
            android:background="@android:color/transparent"
            android:src="@drawable/delete"
            android:onClick="supprimerProfil"
            android:textColor="@drawable/button_color_selector" 
            android:textSize="22sp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/etudiant_profil_bout_valider"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerInParent="true"
            android:layout_marginRight="30dp"
            android:background="@android:color/transparent"
            android:onClick="sauvegarderProfil"
            android:text="OK"
            android:textColor="@drawable/button_color_selector"
            android:textSize="22sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <EditText
        android:id="@+id/etudiant_profil_zone_prenom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:hint="PrÃ©nom"
        android:inputType="text"
        android:singleLine="true" />

    <EditText
        android:id="@+id/etudiant_profil_nom"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:hint="Nom"
        android:inputType="text"
        android:singleLine="true" />

    <EditText
        android:id="@+id/etudiant_profil_email"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:hint="Email"
        android:inputType="text"
        android:singleLine="true" />

</LinearLayout>